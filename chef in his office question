# Problem-Chef in his Office Problem Code:OFFICE
#include <stdio.h>
int main(void) {
    int t;
    scanf("%d",&t);
    for(int i=0;i<t;i++)
    {
        int x,y,a;
        scanf("%d%d",&x,&y);
        a=(x*4)+(y*1);
        printf("%d\n",a);
    }
	// your code goes here
	return 0;
}

