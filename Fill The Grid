#Starters 48 Division 4 
#Problem: GRIDBL
#include <stdio.h>

int main(void) {
    int t;
    scanf("%d",&t);
    while(t--)
    {
        int n,m;
        scanf("%d%d",&n,&m);
        if(n%2==0){
            if(m%2==0){
                printf("0\n");
            }
            else{
                printf("%d\n",n);
            }
        }
        else if(m%2==0){
            printf("%d\n",m);
        }
        else{
            int res=n*m-(n-1)*(m-1);
            printf("%d\n",res);
        }
    }
	// your code goes here
	return 0;
}

